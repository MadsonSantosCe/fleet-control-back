generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Truck {
  id          Int       @id @default(autoincrement())
  licensePlate String    @unique
  deliveries  Delivery[]
}

model Driver {
  id           Int       @id @default(autoincrement())
  name         String
  license      String    @unique
  deliveries   Delivery[]
}

model Delivery {
  id           Int       @id @default(autoincrement())
  type         String
  value        Float
  destination  String
  deliveryTime DateTime
  truck        Truck     @relation(fields: [truckId], references: [id])
  truckId      Int
  driver       Driver    @relation(fields: [driverId], references: [id])
  driverId     Int
  insurance    Boolean
  dangerous    Boolean
  valuable     Boolean
}
